.custom-block
  position relative

  .custom-block-title
    margin-bottom -0.4rem
    font-weight 600

  &.info, &.tip, &.warning, &.danger
    margin 1rem 0
    padding 0.1rem 1.5rem
    border-left-width 0.5rem
    border-left-style solid
    border-top-right-radius 0.25rem
    border-bottom-right-radius 0.25rem

    &::before
      position absolute
      top 14px
      left -16px
      width 25px
      height 25px
      border-radius 50%

  &.info
    border-color #007bff
    background #f8f8f8

    .custom-block-title
      color darken(#007bff, 20%)

    &::before
      content url('~vuepress-plugin-md-enhance/src/icon/info.svg')

      .theme-dark &
        content url('~vuepress-plugin-md-enhance/src/icon/info-dark.svg')

  &.tip
    border-color #42b983
    background #f8f8f8

    .custom-block-title
      color darken(#42b983, 20%)

    &::before
      content url('~vuepress-plugin-md-enhance/src/icon/tip.svg')

      .theme-dark &
        content url('~vuepress-plugin-md-enhance/src/icon/tip-dark.svg')

  &.warning
    border-color #f4cd00
    background #fff7d0

    .custom-block-title
      color darken(#f4cd00, 20%)

    &::before
      content url('~vuepress-plugin-md-enhance/src/icon/warning.svg')

      .theme-dark &
        content url('~vuepress-plugin-md-enhance/src/icon/warning-dark.svg')

  &.danger
    border-color #f55
    background #ffe6e6

    .custom-block-title
      color #a33

    &::before
      content url('~vuepress-plugin-md-enhance/src/icon/danger.svg')

      .theme-dark &
        content url('~vuepress-plugin-md-enhance/src/icon/danger-dark.svg')

  &.details
    display block
    position relative
    margin 1.6em 0
    padding 1.6em
    background #eee
    border-radius 0.25rem

    h4
      margin-top 0

    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0

    summary
      outline none
      cursor pointer

    &[open] summary
      margin-bottom 0.5em
