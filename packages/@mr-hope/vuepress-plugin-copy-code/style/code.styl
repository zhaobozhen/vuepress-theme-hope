.copy-code-button
  width 16px
  height 18px
  padding 7px 8px
  border-width 0
  border-radius 50%
  color #fff
  background #339af0

  &:hover
    cursor pointer !important
    background #228be6

  div[class*='language-'] &
    position absolute
    right -14px
    bottom -14px
    z-index 100

  .icon-copy-code
    width 100%
    height 100%
